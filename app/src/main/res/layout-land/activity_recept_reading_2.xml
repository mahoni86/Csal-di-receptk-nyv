<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="csirkes.ujRecept">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rounded_login"
            android:backgroundTint="#4BFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                app:iconTint="#F44336"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Szerkesztés"
                app:tint="#F44336" />

            <ImageView
                android:id="@+id/kepPreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/no_pictrure"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/Név"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:paddingStart="10dp"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/lobster_two"
                android:text="Recept neve"/>



            <TextView
                android:id="@+id/hozzavalok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster_two"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingStart="25dp"
                android:text="Hozzávalók:"/>

            <TextView
                android:id="@+id/leiras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster_two"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:paddingStart="25dp"
                android:text="Leírás:"/>

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                app:iconTint="#F44336"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Szerkesztés"
                app:tint="#F44336" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>