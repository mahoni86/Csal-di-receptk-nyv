<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="csirkes.ujRecept">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/uj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster_two"
                android:gravity="center_horizontal"
                android:text="Recept hozzáadása"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="50sp"/>

            <EditText
                android:id="@+id/recName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recept neve"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:fontFamily="@font/lobster_two"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_login"/>

            <EditText
                android:id="@+id/Hozzavalok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hozzávalók ,-vel elválasztva "
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="30dp"
                android:fontFamily="@font/lobster_two"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_login"/>

            <EditText
                android:id="@+id/Leiras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Elkészítés leírása"
                android:minLines="10"
                android:gravity="top"
                android:paddingStart="30dp"
                android:inputType="textMultiLine"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="15dp"
                android:fontFamily="@font/lobster_two"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_login"/>

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentés"
                android:layout_gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="50dp"
                app:iconTint="#F44336"
                android:backgroundTint="#F44336"
                android:fontFamily="@font/lobster_two"
                android:gravity="center_horizontal"/>

            <ImageButton
                android:id="@+id/photo"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/camera"
                app:iconTint="#F44336"
                android:backgroundTint="#F44336"
                android:fontFamily="@font/lobster_two"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>