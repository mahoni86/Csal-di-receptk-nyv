<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/lobster_two"
    tools:context="activities.cookBookActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg4"
        android:gravity="start"
        android:orientation="vertical"
        android:scaleType="centerCrop">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster_two"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="Menü"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <LinearLayout
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_login"
            android:backgroundTint="#4BFFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            tools:ignore="UsingOnClickInXml">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="ikon"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sertes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/lobster_two"
                android:gravity="end"
                android:paddingEnd="90dp"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:text="Sertrés Ételek"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_login"
            android:backgroundTint="#4BFFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="ikon"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/csirke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/lobster_two"
                android:gravity="end"
                android:paddingEnd="90dp"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:text="Csirkés ételek"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_login"
            android:backgroundTint="#4BFFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:contentDescription="ikon"
                android:src="@drawable/gluten_free" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/lobster_two"
                android:gravity="end"
                android:paddingEnd="90dp"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:text="Glutén mentes"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_login"
            android:backgroundTint="#4BFFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:contentDescription="ikon"
                android:src="@drawable/desszert" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/lobster_two"
                android:gravity="end"
                android:paddingEnd="90dp"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:text="Deszertek"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>

</FrameLayout>